@model Help.Model.User

@{
    ViewBag.Title = "Khách Hàng - Sửa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section header{
    Khách hàng - Sửa
}


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <div class="box-body">
        <div class="form-group">
           @Html.LabelFor(model => model.Ten)
             @Html.TextBoxFor(model => model.Ten, new{@type="text",@class="form-control",@placeholder="Nguyễn Văn A",@id="txtUsername"})
        </div>
        <div class="form-group">
           @Html.LabelFor(model => model.GioiTinh)
            @Html.DropDownList("Sex",(IEnumerable<SelectListItem>)ViewBag.Sex,"-- Chọn Giới Tính --", new {@class="form-control"})

        </div>
         <div class="form-group">
           @Html.LabelFor(model => model.NamSinh)
             @Html.TextBoxFor(model => model.NamSinh, new{@type="text",@class="form-control",@placeholder="mm/dd/yyyy",@id="txtBirthday"})
        </div>
        <div class="form-group">
           @Html.LabelFor(model => model.Email)
             @Html.TextBoxFor(model => model.Email, new{@type="text",@class="form-control",@placeholder="tamsps@hotmail.com",@id="txtEmail"})
        </div>

        <div class="form-group">
           @Html.LabelFor(model => model.SoDienThoai)
             @Html.TextBoxFor(model => model.SoDienThoai, new{@type="text",@class="form-control",@placeholder="08.632154789",@id="txtPhone"})
        </div>

         <div class="form-group">
           @Html.LabelFor(model => model.DiaChi)
             @Html.TextBoxFor(model => model.DiaChi, new{@type="text",@class="form-control",@placeholder="1 Đồng Khởi, Q.1, TPHCM",@id="txtAddress"})
        </div>

         <div class="form-group">
           @Html.LabelFor(model => model.ChieuCao)
             @Html.TextBoxFor(model => model.ChieuCao, new{@type="text",@class="form-control",@placeholder="160 (Chiều cao tính theo cm)",@id="txtHeight"})
        </div>

        <div class="form-group">
           @Html.LabelFor(model => model.CanNang)
             @Html.TextBoxFor(model => model.CanNang, new{@type="text",@class="form-control",@placeholder="Cân nặng tính theo kg",@id="txtWeight"})
        </div>


         <p>
            <input type="submit" value="Cập nhật" />
        </p>

        </div>
}

<div>
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
