@model IEnumerable<Help.Model.CoSoKhamBenh>

@{
    ViewBag.Title = "Cơ sở khám bệnh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header{
Phòng khám - Danh sách
}


<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>

   
<div class="box-body table-responsive">

    <table class="tabCoSoKham table table-bordered table-striped">
        <thead>
            <tr>
                <th> @Html.DisplayNameFor(model => model.TenCS)</th>
                <th>@Html.DisplayNameFor(model => model.LoaiCoSo)</th>
                <th> @Html.DisplayNameFor(model => model.LoaiDieuTri)</th>
                <th> @Html.DisplayNameFor(model => model.NguoiTao)</th>
                <th> @Html.DisplayNameFor(model => model.NgayTao)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TenCS)</td>
                    <td>@Html.DisplayFor(modelItem => item.LoaiCoSo)</td>
                    <td>@Html.DisplayFor(modelItem => item.LoaiDieuTri)</td>
                    <td>@Html.DisplayFor(modelItem => item.NguoiTao)</td>
                    <td>@Html.DisplayFor(modelItem => item.NgayTao)</td>
                    
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                       @* @Html.ActionLink("Details", "Details", new {id = item.Id}) |*@
                        @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                    </td>
                </tr>
            }
            
        </tbody>
        
    </table>
</div>


@section Scripts {
    <script src="~/Scripts/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/Scripts/plugins/datatables/dataTables.bootstrap.js"></script>
    
    <script type="text/javascript">
        $(document).ready(function () {
            $(".tabCoSoKham").dataTable();
           
        });
    </script>
}
       